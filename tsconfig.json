{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@sih/*": ["packages/shared/*/src"],
      "@sih/types": ["packages/shared/types/src"],
      "@sih/utils": ["packages/shared/utils/src"],
      "@sih/constants": ["packages/shared/constants/src"],
      "@sih/config": ["packages/shared/config/src"],
      "@sih/proto": ["packages/shared/proto/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
