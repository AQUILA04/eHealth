{
  "name": "ehealth",
  "version": "0.1.0",
  "description": "Système d'Information Hospitalier (SIH) Intégré - Architecture Hub-and-Spoke",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "install": "pnpm install",
    "dev": "pnpm run dev --recursive",
    "build": "pnpm run build --recursive",
    "test": "pnpm run test --recursive",
    "test:coverage": "pnpm run test:coverage --recursive",
    "lint": "pnpm run lint --recursive",
    "lint:fix": "pnpm run lint:fix --recursive",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm run clean --recursive && rm -rf node_modules pnpm-lock.yaml",
    "docker:build": "docker-compose -f infrastructure/docker/docker-compose.dev.yml build",
    "docker:up": "docker-compose -f infrastructure/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker/docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f infrastructure/docker/docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.2",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "services/java/*",
    "services/nodejs/*",
    "services/frontend",
    "shared/*"
  ]
}
